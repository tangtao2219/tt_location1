<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9cdad"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.file.tangtao.tt_location.Register">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher1"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:id="@+id/textView14"
        android:text="掌上讲座"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_marginEnd="36dp" />

    <TextView
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginEnd="66dp" />

    <TextView
        android:text="密      码:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_marginTop="26dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView13"
        android:layout_toStartOf="@+id/textView14" />

    <TextView
        android:text="用  户  名:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:id="@+id/textView13"

        android:layout_marginTop="55dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/textView16" />

    <CheckBox
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:id="@+id/checkBox_literature"
        android:button="@drawable/checkbox_literature"
        android:checked="false"
      android:layout_alignTop="@+id/checkBox_law"
        android:layout_marginLeft="125dp"
        android:layout_alignEnd="@+id/button5" />

    <CheckBox
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:id="@+id/checkBox_education"
        android:button="@drawable/checkbox_education"
        android:checked="false"
        android:layout_alignTop="@+id/checkBox_literature"
        android:layout_marginLeft="250dp"/>

    <CheckBox
    android:layout_height="60dp"
    android:layout_width="120dp"
    android:id="@+id/checkBox_economics"
    android:button="@drawable/checkbox_economics"
    android:checked="false"
    android:layout_below="@+id/checkBox_law"
    android:layout_toStartOf="@+id/button5" />


    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/button5"
        android:layout_marginTop="537dp"
        android:layout_marginLeft="-10dp"
        android:layout_alignEnd="@+id/textView14"
        android:layout_toEndOf="@+id/checkBox_law" />

    <CheckBox
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:id="@+id/checkBox_diplomacy"
        android:button="@drawable/checkbox_diplomacy"
        android:checked="false"
        android:layout_below="@+id/checkBox_literature"
        android:layout_marginLeft="125dp"
        android:layout_alignEnd="@+id/checkBox_literature" />

    <CheckBox
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:id="@+id/checkBox_philosophy"
        android:button="@drawable/checkbox_philosophy"
        android:checked="false"
        android:layout_below="@+id/checkBox_education"
        android:layout_marginLeft="250dp"/>

    <RadioGroup
        android:id="@+id/radioGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/editText7"
        android:layout_alignEnd="@+id/textView22"
        android:layout_marginTop="20dp">
    <RadioButton
        android:text="男"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        android:checked="true" />

        <RadioButton
            android:text="女"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"

          />
    </RadioGroup>

    <TextView
        android:text="从以下选项中勾选出你喜欢的兴趣爱好"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:id="@+id/textView22"
        android:layout_marginTop="17dp"

        android:layout_below="@+id/radioGroupID"
        android:layout_alignStart="@+id/textView23" />

    <CheckBox
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:id="@+id/checkBox_law"
        android:button="@drawable/checkbox_law"
        android:checked="false"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText6"
        android:hint="username"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/checkBox_law" />

    <TextView
        android:text="性       别"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:id="@+id/textView23"
        android:layout_above="@+id/textView22"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignTop="@+id/radioGroupID"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="重复密码:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:id="@+id/textView19"
        android:layout_below="@+id/editText9"
        android:layout_marginTop="12dp"
        android:layout_alignEnd="@+id/textView23" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText7"
        android:hint="repeat_password"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignStart="@+id/editText9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText9"
        android:hint="password"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignStart="@+id/editText6" />

</RelativeLayout>
